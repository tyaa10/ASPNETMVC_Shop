@model IEnumerable<SportsShop.Domain.Entity.Product>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/_LayoutMain.cshtml";
    }

    <h2>Index</h2>
    @foreach (var p in Model)
    {
        <div class="item">
            <h3>@p.Name</h3>
            @p.Description
            <h4>@p.Price.ToString("c")</h4>
        </div>
    }
